---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Effective Thermal Management by ThermoMGT
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
ThermoMGT delivers expert resources and innovative solutions for electronic thermal management. From tutorials to thermal module manufacturing, we simplify heat management and empower efficient, reliable designs.
    </p>
  </div>
</main>
